{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"lib": ["ES2021"],
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "node",
		"outDir": "dist",
		"baseUrl": "src",
		"paths": {
			"@app/*": ["./*"],
			"@config/*": ["./config/*"],
			"@services/*": ["./services/*"],
			"@utils/*": ["./utils/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
